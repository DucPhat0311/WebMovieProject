<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

	<servlet>
		<servlet-name>HomeServlet</servlet-name>
		<servlet-class>example.controller.HomeServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>HomeServlet</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>

	<!-- THÃŠM SEAT SELECTION SERVLET -->
	<servlet>
		<servlet-name>SeatSelectionServlet</servlet-name>
		<servlet-class>example.controller.SeatSelectionServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>SeatSelectionServlet</servlet-name>
		<url-pattern>/seat-selection</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>home</welcome-file>
	</welcome-file-list>

</web-app>